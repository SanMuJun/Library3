<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:text="个人信息"
        android:textSize="40sp"
        android:textColor="#00ff00"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_student_name"
        android:layout_below="@+id/tv_title"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="姓名:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_student_number"
        android:layout_below="@+id/tv_student_name"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="学号:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_student_class"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/tv_student_number"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="班级:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_student_major"
        android:layout_below="@+id/tv_student_class"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="20dp"
        android:text="专业:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_student_colloge"
        android:layout_below="@+id/tv_student_major"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:text="学院:"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_person"
        android:background="@drawable/person"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_above="@+id/tv_student_major"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        />


    <Button
        android:id="@+id/bt_collection"
        android:layout_above="@+id/bt_back_loading"
        android:text="收藏"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_person"
        android:layout_alignEnd="@+id/iv_person"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/bt_add_student"
        android:text="添加学生"
        android:textColor="#0000ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_add_admin"
        android:layout_alignLeft="@+id/tv_student_colloge"
        android:layout_alignStart="@+id/tv_student_colloge" />
    <Button
        android:id="@+id/bt_add_admin"
        android:text="添加管理员"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:layout_alignTop="@+id/bt_collection"
        android:layout_toLeftOf="@+id/iv_person"
        android:layout_toStartOf="@+id/iv_person" />




    <Button
        android:id="@+id/bt_back_loading"
        android:background="#ff0000"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />



</RelativeLayout>